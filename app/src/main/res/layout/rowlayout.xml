<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llColors"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="22px"
        android:layout_height="22px"
        android:layout_marginLeft="4px"
        android:layout_marginRight="10px"
        android:layout_marginTop="4px"
        android:src="@drawable/ic_launcher" >
    </ImageView>

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+id/label"
        android:layout_weight="1"
        android:textSize="20px" >
    </TextView>

    <TextView
        android:id="@+id/ColCOLUMN_CONTR_NAME"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="COLUMN_CONTR_NAME" />

    <TextView
        android:id="@+id/ColCOLUMN_PERSON_NAME"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.31"
        android:text="COLUMN_PERSON_NAME" />

    <TextView
        android:id="@+id/ColCOLUMN_REZULT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.39"
        android:text="COLUMN_REZULT" />

    <TextView
        android:id="@+id/ColCOLUMN_DATA"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.84"
        android:text="COLUMN_DATA" />
    <TextView
        android:id="@+id/DESCRIPTION"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.84"
        android:text="DESCRIPTION" />

</LinearLayout>